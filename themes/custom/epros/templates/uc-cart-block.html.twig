 <a href="#" class="cart-icon size-24"> <span class="items-count font-2"> <b>{{ item_count }}</b> </span> </a>
    {% if items %}
      <ul class="pop-up-box cart-popup">
          {% for key, item in items %}
            {% for k, image in arr_image %}
              {% if key == k %}
              <li class="cart-list">
                  <div class="cart-img epro-img-cart-form"> <img src="{{ image }}" alt="product"> </div>
                  <div class="cart-title">
                      <div class="font-2 size-12" >{{ item.title }}</div>
                      <p class="caption-text font-3"> 
                          <span class="size-14 black-color">{{ item.price }}</span>
                      </p>
                  </div>
              </li>
              {% endif %}
            {% endfor %}
          {% endfor %}
          <li class="cart-list font-3 sub-total">
              <div class=""> 
                  <b class="black-color">Sub Total</b>
              </div>
              <div class="pull-right"> 
                  <span class="theme-color size-18">{{ total }}</span>
              </div>
          </li>
          <li class="cart-list buttons"> 
                {% if items %}
                  {{ summary_links_cs|t }}
                {% endif %}
          </li>
      </ul>
    {% endif %}
