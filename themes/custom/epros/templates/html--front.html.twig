
<!DOCTYPE html>
<!--[if IE 7]><html class="no-js ie7 oldie" lang="en-US"> <![endif]-->
<!--[if IE 8]><html class="no-js ie8 oldie" lang="en-US"> <![endif]-->
<!--[if gt IE 8]><!-->
<html {{ html_attributes }}>
    <head>
        <!-- META TAG -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ head_title|safe_join(' | ') }}</title>
        {#{{ attach_library('epros/epros-lib') }}#}
        <head-placeholder token="{{ placeholder_token|raw }}">
        <css-placeholder token="{{ placeholder_token|raw }}">
        <js-placeholder token="{{ placeholder_token|raw }}">
        {% if direction == 'rtl' %}
          <link rel="stylesheet" type="text/css" href="{{ path_to_theme_epros }}/assets/plugins/bootstrap-rtl-master/dist/css/bootstrap-rtl.min.css">
        {% endif %}
        {% if general_setting_tracking_code != '' %}
          {{ general_setting_tracking_code|t }}
        {% endif %}
        {% if custom_css != '' %}
          <style type="text/css" media="all">
            {{ custom_css|t }}
          </style>
        {% endif %}
        <!-- Document Title
        ============================================= -->
    </head>
    {% if direction == 'rtl' %}
    <body id="home" class="wide epros-rtl"> 
    {% else %}
    <body id="home" class="wide"> 
    {% endif %}
      <a href="#main-content" class="visually-hidden focusable">
        {{ 'Skip to main content'|t }}
      </a>
      <div class="wrapper"> 
        {{ page_top }}
        {{ page }}
        {{ page_bottom }}
      </div>   
      <js-bottom-placeholder token="{{ placeholder_token|raw }}">
    </body>
</html>