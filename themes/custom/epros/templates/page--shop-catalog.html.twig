{% if shop_listing_sidebar != 'left' and shop_listing_sidebar != 'right' %}
    {% set shop_classes = 'col-md-12' %}
    {% set shop_classes_1 = 'cat-fullwidth' %}
{% else %}
    {% set shop_classes = 'col-md-9 col-sm-8' %}
    {% set shop_classes_1 = 'cat-with-sidebar' %}
{% endif %}
{% if setting_header == 'style2' %}
    {% set header_classes = 'header-style-2' %}
{% elseif setting_header == 'style3' %}
    {% set header_classes = 'header-style-3' %}
{% elseif setting_header == 'style4' %}
    {% set header_classes = 'header-style-4' %}
{% elseif setting_header == 'style5' %}
    {% set header_classes = 'header-style-5' %}
{% elseif setting_header == 'style6' %}
    {% set header_classes = 'header-style-6' %}
{% elseif setting_header == 'style7' %}
    {% set header_classes = 'header-style-7' %}
{% elseif setting_header == 'style8' %}
    {% set header_classes = 'header-style-8' %}
{% else %}
    {% set header_classes = '' %}
{% endif %}
<main class="wrapper epros-front-header epros-menu-accout {{ header_classes }}"> 
    <!-- Header -->
    {% include theme_path ~ "/templates/header/header-1.html.twig" %}
    <!-- /Header -->

    <!-- CONTENT AREA -->

    <!--Breadcrumb Section Start-->
    <section class="breadcrumb-bg light-bg" style="background-image: url({{ shop_page_header_bg }});">                
        <div class="theme-container container ">
            <div class="space-top-30"></div>
            <div class="site-breadcumb col-md-5 space-80">                        
                <h1 class="section-title size-48 no-margin space-bottom-20">{{ title }}</h1> 
                <ol class="breadcrumb breadcrumb-menubar">
                    {{ page.breadcrumbs }}                             
                </ol>
            </div>  
        </div>
    </section>
    <!--Breadcrumb Section End-->

    <section class="wrapper space-60">

        <div class="theme-container container">
            <div class="row">
                {% if shop_listing_sidebar == 'left' %}
                    <aside class="sidebar with-border col-sm-4 col-md-3 space-15">
                        {{ page.shop_sidebar }}
                    </aside>
                {% endif %}
                <!-- Product Categories Starts -->
                <aside class="{{ shop_classes }} prod-categories {{ shop_classes_1 }}">
                    {{ page.content }}
                </aside>
                <!-- / Product Categories Ends -->

                <!-- Product Categories Sidebar Starts -->
                {% if shop_listing_sidebar == 'right' %}
                    <aside class="sidebar with-border col-sm-4 col-md-3 space-15">
                        {{ page.shop_sidebar }}
                    </aside>
                {% endif %}
                <!-- Product Categories Sidebar Starts -->
            </div>
        </div>

    </section>
    <!-- / CONTENT AREA -->

    <!-- FOOTER -->
    {% if setting_footer == 'style2' %}
        {% include theme_path ~ "/templates/footer/footer-2.html.twig" %}
    {% elseif setting_footer == 'style3' %}
        {% include theme_path ~ "/templates/footer/footer-3.html.twig" %}
    {% elseif setting_footer == 'style4' %}
        {% include theme_path ~ "/templates/footer/footer-4.html.twig" %}
    {% elseif setting_footer == 'style5' %}
        {% include theme_path ~ "/templates/footer/footer-5.html.twig" %}
    {% elseif setting_footer == 'style6' %}
        {% include theme_path ~ "/templates/footer/footer-6.html.twig" %}
    {% elseif setting_footer == 'style7' %}
        {% include theme_path ~ "/templates/footer/footer-7.html.twig" %}
    {% elseif setting_footer == 'style8' %}
        {% include theme_path ~ "/templates/footer/footer-8.html.twig" %}
    {% elseif setting_footer == 'style9' %}
        {% include theme_path ~ "/templates/footer/footer-9.html.twig" %}
    {% elseif setting_footer == 'style10' %}
        {% include theme_path ~ "/templates/footer/footer-10.html.twig" %}
    {% else %}
        {% include theme_path ~ "/templates/footer/footer-1.html.twig" %}
    {% endif %}
    <!-- /FOOTER -->

    <div id="to-top" class="to-top"> <i class="arrow_carrot-up"></i> </div>

</main>